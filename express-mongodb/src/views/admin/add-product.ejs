<%- include('../layouts/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css" />
<link rel="stylesheet" href="/css/product.css" />

</head>
<body>
<%- include('../layouts/nav.ejs') %>

    <main>
      <form class="product-form" action=<%= path %> method="POST">
        <div class="form-control">
          <label for="title">Title</label>
          <input type="text" name="title" id="title" required />
        </div>
        <div class="form-control">
          <label for="description">Description</label>
          <textarea name="description" id="description" rows="5" required/></textarea>

        </div>
        <div class="form-control">
          <label for="title">Price</label>
          <input type="number" name="price" id="price" step="0.01" min="0.10" max="100000.00" required />
        </div>
         <div class="form-control">
            <label for="pet-select">Choose a pet:</label>
            <select name="imageurl" id="imageurl" required>
              <option value="">--Please choose an image url--</option>
              <option value="https://placehold.co/400x400">400</option>
              <option value="https://placehold.co/410x410">410</option>
              <option value="https://placehold.co/415x415">415</option>
              <option value="https://placehold.co/420x420">420</option>
            </select>
         </div>


        <button type="submit">Add Product</button>
      </form>
    </main>
<%- include('../layouts/end.ejs') %>