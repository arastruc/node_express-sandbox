        <%- include('../layouts/nav.ejs') %>
        <main>
            <% if (orders?.length <= 0) { %>
                <h1>Nothing there!</h1>
            <% } else { %>
                <ul>
                    <% orders.forEach(order => { %>
                        <li>
                            <h1># <%= order.id %></h1>
                            <h2> Price : <%= parseFloat(order.totalPrice).toFixed(2) %> â‚¬</h2>
                            <ul>
                                <% order.items.forEach(product => { %>
                                    <li><%= product.product_title %></li>
                                <% }); %>
                            </ul>
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </main>
        <%- include('../layouts/end.ejs') %>